<Window x:Class="CSS490Kinect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CSS90 Kinect Engaugement" Height="720" Width="1280"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="30">Kinect Engagement</TextBlock>

        <TextBlock x:Name="BodyTrackedText" Grid.Row="1" HorizontalAlignment="Left" FontSize="60" VerticalAlignment="Top" Margin="50,50,0,0">BodyTrackedText</TextBlock>
        <TextBlock x:Name="FacesTrackedText" Grid.Row="1" HorizontalAlignment="Left" FontSize="60" VerticalAlignment="Top" Margin="50,135,0,0">FacesTrackedText</TextBlock>

        <StatusBar Grid.Row="2" HorizontalAlignment="Stretch" Name="statusBar" VerticalAlignment="Bottom" Background="White" Foreground="{StaticResource MediumGreyBrush}">
            <StatusBarItem Content="{Binding StatusText}" />
        </StatusBar>
        <TextBlock x:Name="bodyInfoText" HorizontalAlignment="Left" Margin="121,301,0,0" Grid.Row="1" TextWrapping="Wrap" Text="bodyInfoText" VerticalAlignment="Top" FontSize="30"/>
    </Grid>
</Window>
